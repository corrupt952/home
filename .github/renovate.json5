{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  dependencyDashboard: true,
  reviewers: ["@corrupt952"],

  // https://docs.renovatebot.com/key-concepts/scheduling/
  schedule: ["after 9am"],

  extends: [
    "config:base",

    // https://docs.renovatebot.com/presets-default/
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",

    // https://github.com/aquaproj/aqua-renovate-config
    "github>aquaproj/aqua-renovate-config#1.6.0",
  ],

  argocd: {
    fileMatch: ["manifests/argocd-config/base/.*\\.yaml"],
  },
  kubernetes: {
    fileMatch: ["manifests/.*/base/.*\\.yaml"],
  },
  docker: {
    fileMatch: ["containers/.*/Dockerfile"],
  },

  platformAutomerge: true,
  packageRules: [
    {
      matchPackagePatterns: ["cloudflare-cloudflared"],
      automerge: true,
    },
  ],
}
